@model HoroscopeApplication.ViewModels.DateOfBirthViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Horoscope Finder</h1>
    <div class="container">
        <p>Enter your Date of Birth to find your horoscope</p>
        <div class="row">
            <div class="col-md-3" style="margin: auto">
                <form method="post" asp-action="Index" asp-controller="Horoscope">
                    <div class="form-group">
                        <input id="datepicker1" type="date" class="form-control" asp-for="Dob">
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button id="btnFindHoroscope" class="btn btn-outline-success">Find Horoscope</button>
                    </div>
                </form>
            </div>
        </div>

