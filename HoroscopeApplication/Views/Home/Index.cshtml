@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Horoscope Finder</h1>
    <div class="container">
        <p>Enter your Date of Birth to find your horoscope</p>
        <div class="row">
            <div class="col-md-3" style="margin: auto">
                <form method="post">
                    <div class="form-group">
                        <input id="datepicker1" type="date" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success" asp-controller="Horoscope" asp-action="Find">Find Horoscope</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>